#
# Variables
#

# Font
set $font Input Sans Condensed 9

# Color scheme
set $colors nord

# Super as modifier (Mod1 for Alt)
set $mod Mod4

# Vim navigation keys
set $left h
set $down j
set $up k
set $right l

# Workspace names
set $workspace1 1
set $workspace2 2
set $workspace3 3
set $workspace4 4
set $workspace5 5
set $workspace6 6

# Commands
set $term alacritty --class "terminal"
set $scratchpad_term alacritty --class "scratchpad_term" --title "scratchpad_term"
set $menu wofi
set $menuargs --show=drun,run
set $files nautilus

set $screenshot_area sleep 3 && grim -g "$(slurp)" - \
  | wl-copy && wl-paste -t image/png > \
  "$HOME/Pictures/Screenshots/$(date +%Y%m%d_%Hh%Mm%Ss)_area.png"

set $screenshot_window sleep 3 && grim -g \
  "$(swaymsg -t get_tree | jq -j '.. | select(.type?) | select(.focused).rect | "\(.x),\(.y) \(.width)x\(.height)"')" - \
  | wl-copy && wl-paste -t image/png > \
  "$HOME/Pictures/Screenshots/$(date +%Y%m%d_%Hh%Mm%Ss)_window.png"

set $screenshot_screen sleep 3 && grim -o \
  "$(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name')" - \
  | wl-copy && wl-paste -t image/png > \
  "$HOME/Pictures/Screenshots/$(date +%Y%m%d_%Hh%Mm%Ss)_screen.png"

set $lock swaylock \
  --font "Input Sans Compressed" \
  --font-size 12 \
  --scaling fill \
  --ignore-empty-password \
  --indicator-radius 150 \
  --indicator-thickness 10 \
  --inside-color "#2e3440" \
  --inside-ver-color "#2e3440" \
  --key-hl-color "#88c0d0" \
  --ring-color "#2e3440" \
  --ring-ver-color "#2e3440" \
  --separator-color "#2e3440" \
  --line-uses-inside \
  --layout-bg-color "#00000000" \
  --layout-border-color "#00000000" \
  --layout-text-color "#eceff4" \
  --clock \
  --screenshots \
  --indicator-idle-visible \
  --datestr "%H:%M" \
  --timestr "%A" \
  --grace 1 \
  --fade-in 1 \
  --effect-greyscale \
  --effect-blur 6x8 \
  --effect-vignette 0.6:0.8

set $powermenu wlogout \
  --buttons-per-row 2 \
  --row-spacing 34 \
  --column-spacing 34 \
  --margin 34 \
  --protocol layer-shell

#
# Appearance
#

font pango:$font

gaps inner 14
gaps outer 12

default_border pixel 2
default_floating_border pixel 2

hide_edge_borders smart
smart_borders on

#
# Workspaces
#

workspace_auto_back_and_forth yes

workspace $workspace1 output DP-1
workspace $workspace2 output DP-1
workspace $workspace3 output DP-1
workspace $workspace4 output DVI-D-1
workspace $workspace5 output DVI-D-1
workspace $workspace6 output DVI-D-1

#
# Outputs
#

# All monitors
output "*" bg ~/Pictures/Wallpapers/active.jpg fill

# Primary monitor
output DP-1 {
  mode 1920x1080@144.001007Hz
  position 1920,0
}

# Secondary monitor
output DVI-D-1 {
  mode 1920x1080@60Hz
  position 0,0
}

#
# Inputs
#

seat seat0 hide_cursor when-typing enable
seat seat0 idle_wake keyboard

input type:keyboard {
  repeat_delay 250
  repeat_rate 35

  # `setxkbmap -print -verbose 10` to show current settings for migrating current settings or after using Plasma or Gnome settings apps settings for a more explanatory setup.
  xkb_numlock enable
  xkb_layout us,se

  # CapsLock to Escape (and use Shift-CapsLock for CapsLock)
  # Both Shift keys to change keyboard layout
  # Terminate X server on Ctrl-Alt-Del
  # Right Alt to AltGr
  xkb_options caps:escape_shifted_capslock,grp:shifts_toggle,terminate:ctrl_alt_bksp,lv3:ralt_switch_multikey
}

input type:touchpad {
  tap enable
  click_method clickfinger
}

#
# Key Binds
#

# Drag windows by holding down $mod and left mouse button.
# Resize with right mouse button + $mod.
# Change normal to inverse to use left button for resizing.
floating_modifier $mod normal

bindsym {
  # Launch
  $mod+Return exec $term
  $mod+d exec $menu | xargs swaymsg exec
  $mod+Space exec $menu | xargs swaymsg exec
  $mod+g exec $files | xargs swaymsg exec
  $mod+Backspace exec $powermenu | xargs swaymsg exec

  $mod+q kill
  $mod+Shift+q kill
  $mod+Shift+c reload

  # Move focus
  $mod+$left focus left
  $mod+$down focus down
  $mod+$up focus up
  $mod+$right focus right

  $mod+Left focus left
  $mod+Down focus down
  $mod+Up focus up
  $mod+Right focus right

  # Move windows
  $mod+Shift+$left move left
  $mod+Shift+$down move down
  $mod+Shift+$up move up
  $mod+Shift+$right move right

  $mod+Shift+Left move left
  $mod+Shift+Down move down
  $mod+Shift+Up move up
  $mod+Shift+Right move right

  # Focus workspace
  $mod+1 workspace $workspace1
  $mod+2 workspace $workspace2
  $mod+3 workspace $workspace3
  $mod+4 workspace $workspace4
  $mod+5 workspace $workspace5
  $mod+6 workspace $workspace6

  $mod+Alt+Left workspace prev_on_output
  $mod+Alt+Right workspace next_on_output
  $mod+Alt+$left workspace prev_on_output
  $mod+Alt+$right workspace next_on_output

  $mod+Tab workspace next_on_output
  $mod+Shift+Tab workspace prev_on_output
  Alt+Tab workspace next_on_output
  Alt+Shift+Tab workspace prev_on_output

  # Move window to workspace and focus
  $mod+Shift+1 move container to workspace $workspace1, workspace $workspace1
  $mod+Shift+2 move container to workspace $workspace2, workspace $workspace2
  $mod+Shift+3 move container to workspace $workspace3, workspace $workspace3
  $mod+Shift+4 move container to workspace $workspace4, workspace $workspace4
  $mod+Shift+5 move container to workspace $workspace5, workspace $workspace5
  $mod+Shift+6 move container to workspace $workspace6, workspace $workspace6

  # Split horizontal or vertical
  $mod+b splith
  $mod+v splitv

  # Layout
  $mod+e layout toggle split
  $mod+w layout tabbed
  $mod+s layout stacking
  $mod+Shift+f floating toggle
  $mod+Shift+Space floating toggle
  $mod+f fullscreen
  $mod+x focus mode_toggle
  $mod+u focus parent

  # Scratchpad
  $mod+Shift+z move scratchpad
  $mod+z scratchpad show

  # Audio
  XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
  XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
  XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

  # Screenshot
  Print exec $screenshot_area
  Shift+Print exec $screenshot_window
  Ctrl+Print exec $screenshot_screen
}

# Bind on single key release only
bindsym --release Super_L exec (pgrep $menu 1>/dev/null 2>&1 && pkill $menu) || $menu $menuargs | xargs swaymsg exec

#
# Resize Mode
#

set $mode_resize Resize

mode "$mode_resize" {
  bindsym $left resize shrink width 20px
  bindsym $down resize grow height 20px
  bindsym $up resize shrink height 20px
  bindsym $right resize grow width 20px

  bindsym Left resize shrink width 20px
  bindsym Down resize grow height 20px
  bindsym Up resize shrink height 20px
  bindsym Right resize grow width 20px

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym Space mode "default"
}

bindsym $mod+r mode "$mode_resize"

#
# System Mode
#

set $mode_system System

mode "$mode_system" {
  bindsym e exec swaymsg exit, mode "default"
  bindsym s exec systemctl poweroff, mode "default"
  bindsym r exec systemctl reboot, mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym Space mode "default"
}

bindsym $mod+Shift+e mode "$mode_system"
bindsym $mod+Shift+Backspace mode "$mode_system"

#
# Autostart
#

# Import environment
exec systemctl --user import-environment XDG_SESSION_TYPE XDG_CURRENT_DESKTOP
exec dbus-update-activation-environment WAYLAND_DISPLAY

# Start systemd targets
exec systemctl --user start sway-session.target
exec systemctl --user start graphical-session.target

# Open a terminal on scratchpad
exec $scratchpad_term

# Turn off monitor after 10 minutes, and lock screen after 30 minutes and before
# going into sleep mode
exec swayidle -w \
  timeout 900 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
  timeout 1800 '$lock' \
  before-sleep '$lock'

# Fullscreen windows inhibits idle
for_window [class="^.*"] inhibit_idle fullscreen
for_window [app_id="^.*"] inhibit_idle fullscreen

#
# Status Bar
#

bar {
  swaybar_command waybar
}

#
# Window Specific
#

assign [class="^Steam$"] $workspace5

for_window [app_id="org.gnome.Nautilus"] floating enable
for_window [app_id="org.kde.dolphin"] floating enable
for_window [app_id="pavucontrol"] floating enable
for_window [class="qimgv"] floating enable
for_window [class="qview"] floating enable

# Terminals
for_window [app_id="transparent_term"] border none
for_window [app_id="scratchpad_term"] move scratchpad
for_window [app_id="scratchpad_term"] floating enable, resize set 1280 720
for_window [app_id="popup_term"] floating enable, resize set 920 720

#
# Load other configuration files
#

include colors.$colors
